<?xml version="1.0"	encoding="UTF-8"?>
<redxml>
  <definitions>
    <!-- abilities can be applied to entities -->
    <abilities>

      <ability name="HealPotencyReductionEffect">
        <tags></tags>
        <duration type="add" min="10"/>
      </ability>

      <ability name="WMHeffectVitalityBonus">
        <tags></tags>
        <duration type="add" min="900"/>
        <vitality type="add" min="50"/>
      </ability>

      <ability name="WMHeffectExperienceBonus">
        <tags></tags>
        <duration type="add" min="900"/>
        <nonhuman_exp_bonus_when_fatal type="add" min="0.05"/>
        <human_exp_bonus_when_fatal type="add" min="0.05"/>
      </ability>

      <ability name="WMHeffectVitalityRegenBonus">
        <tags></tags>
        <duration type="add" min="900"/>
        <vitalityRegen type="add" min="2" />
        <vitalityCombatRegen type="add" min="1" />
      </ability>

      <ability name="WMHeffectCriticalBonus">
        <tags></tags>
        <duration type="add" min="900"/>
        <critical_hit_chance type="add" min="0.03" />
        <critical_hit_damage_bonus type="add" min="0.3" />
      </ability>
      
      <ability name="WMHeffectArmorBonus">
        <tags></tags>
        <duration type="add" min="900"/>
        <armor type="add" min="50" />
      </ability>

      <ability name="WMHeffectEncumbranceBonus">
        <tags></tags>
        <duration type="add" min="900"/>
        <encumbrance type="add" min="25" />
      </ability>

    </abilities>
  </definitions>

  <!-- effects can be used for the ability to display in the de/buff bar -->
  <custom>
    <effect
      name_name="HealPotencyReductionEffect"
      defaultAbilityName_name="HealPotencyReductionEffect"
      effectNameLocalisationKey_name="skill_name_mutation_4"
      showOnHUD="1"
      iconType_name="icon_heal_potency_reduction"
    />

    <effect
      name_name="WMHeffectVitalityBonus"
      defaultAbilityName_name="WMHeffectVitalityBonus"
      effectNameLocalisationKey_name="wmh_effect_vitality_bonus"
      showOnHUD="1"
      iconType_name="icon_heal_potency_reduction"
    />
    <effect
      name_name="WMHeffectExperienceBonus"
      defaultAbilityName_name="WMHeffectVitalityBonus"
      effectNameLocalisationKey_name="wmh_effect_vitality_bonus"
      showOnHUD="1"
      iconType_name="icon_heal_potency_reduction"
    />

    <effect_icons>
      <effect
        iconType_name="icon_heal_potency_reduction"
        path="icons\Perks\icon_perk_defense.png"
      />
    </effect_icons>
  </custom>
</redxml>
